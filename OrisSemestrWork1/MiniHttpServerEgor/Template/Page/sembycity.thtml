<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Горящие Туры</title>
    <link rel="stylesheet" href="style.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
</head>
<body>

    <header class="header">
    <div class="container header-container">
        <div class="logo-and-links">
            <div class="logo">
                <img src="logo-goryashchih.png" alt="Сеть магазинов Горящих Путёвок" class="logo-img">
            </div>
            
        </div>

        <!-- Формы авторизации и регистрации -->
        <div class="auth-section">
            <!-- Форма регистрации -->
            <form action="/join" method="POST" class="auth-form-inline">
                <input type="text" name="login" placeholder="Логин" required>
                <input type="password" name="password" placeholder="Пароль" required>
                <button type="submit" class="btn-auth">Зарегистрироваться</button>
            </form>

            <!-- Форма входа -->
            <form action="/login" method="POST" class="auth-form-inline">
                <input type="text" name="login" placeholder="Логин" required>
                <input type="password" name="password" placeholder="Пароль" required>
                <button type="submit" class="btn-auth">Войти</button>
            </form>
        </div>
    </div>
</header>

    <div class="main-nav-wrapper">
        <div class="container main-nav-container">
            <nav class="main-nav">
                <a href="#" class="nav-item active">Горящие туры</a>
                <a href="#" class="nav-item">Поиск тура</a>
                <a href="#" class="nav-item">Поиск отеля</a>
                <a href="#" class="nav-item">Офисы продаж</a>
                <a href="#" class="nav-item">О компании</a>
                <a href="#" class="nav-item">Индекс Горящих</a>
            </nav>
        </div>
    </div>

    <main class="content-wrapper">
        <div class="container search-container">
            <div class="search-top-row">
                
                
            </div>

           <div class="TVMainForm">
    <form action="/tour/search" method="POST">
        <div class="search-input-row">
            <div class="input-with-icon">
                <img src="map-pin.svg" alt="Иконка локации" class="input-icon">
                <input type="text" name="country" placeholder="Страна" class="main-search-input" required>
                <span class="arrow-down"></span>
            </div>
        </div>

        <div class="filters-row">
            <!-- Класс отеля(звезды) -->
            <div class="dropdown filter-hotel-class">
                <div class="filter-label">Звезды</div>
                <input 
                    type="number" 
                    name="stars" 
                    min="1" 
                    max="5" 
                    placeholder="1–5" 
                    class="main-search-input number-input"
                    required
                >
            </div>

            <!-- Бюджет -->
            <div class="dropdown filter-meal-plan">
                <div class="filter-label">Бюджет</div>
                <input 
                    type="number" 
                    name="budget" 
                    min="1" 
                    placeholder="₽" 
                    class="main-search-input number-input"
                    required
                >
            </div>

            <!-- Кнопка поиска -->
            <button type="submit" class="btn btn-search">Найти туры</button>
        </div>
    </form>
</div>
        

       

        <h2 class="section-title hot-tours-title">ГОРЯЩИЕ ТУРЫ</h2>
        <div class="container hot-tours-grid">
            $foreach(var tour in tours)
           <div class="tour-card">
                <div class="tour-image-container">
                    
                    
                 <!-- изображение остаётся без изменений -->
    </div>
    <div class="tour-details">
        <div class="tour-stars">Количество звезд: ${tour.Stars}</div>
        <div class="tour-name">
            <form action="/bigpage" method="POST" style="display: inline;">
                <input type="hidden" name="tourId" value="${tour.Id}">
                <button type="submit" class="tour-name-link">
                    ${tour.Hotel.Name}
                </button>
            </form>
        </div>
        <div class="tour-location">${tour.City}, ${tour.Country}</div>
        <div class="tour-price-row">
            <span class="current-price">${tour.Price} ₽</span>
            <span class="share-icon"></span>
        </div>
                </div>
            </div>
            $endfor
            


        </div>

    </main>
</body>
</html>